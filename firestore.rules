rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Saved recipes collection - simplified to match userPreferences pattern
    match /savedRecipes/{recipeId} {
      // Users can read their own saved recipes
      allow read: if request.auth != null && (
        !resource.exists || 
        resource.data.userId == request.auth.uid
      );
      
      // Users can write (create/update) their own saved recipes
      // Check that userId in the data matches the authenticated user
      allow write: if request.auth != null && 
        request.resource.data.userId == request.auth.uid &&
        (!resource.exists || resource.data.userId == request.auth.uid);
      
      // Users can delete their own saved recipes
      allow delete: if request.auth != null && 
        (!resource.exists || resource.data.userId == request.auth.uid);
    }
    
    // User preferences collection
    match /userPreferences/{userId} {
      // Users can only read their own preferences
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Users can only create/update their own preferences
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Meal Plans collection
    match /mealPlans/{mealPlanId} {
      // Users can read their own meal plans
      allow read: if request.auth != null && (
        !resource.exists || 
        resource.data.userId == request.auth.uid
      );
      
      // Users can create their own meal plans
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own meal plans
      allow update: if request.auth != null && 
        resource.data.userId == request.auth.uid &&
        request.resource.data.userId == request.auth.uid;
      
      // Users can delete their own meal plans
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}

